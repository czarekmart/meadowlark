<form class="form-horizontal"
	  role="form"
	  enctype="multipart/form-data"
	  method="post"
	  action="/flash-messages">

	<div class="form-group">
		<label for="intro" class="col-sm-2 control-label">Intro</label>
		<div class="col-sm-4">
			<input type="text" class="form-control" required id="intro" name="intro" />
		</div>
	</div>
	<div class="form-group">
		<label for="message" class="col-sm-2 control-label">Message</label>
		<div class="col-sm-4">
			<input type="text" class="form-control" required id="message" name="message" />
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-4" id="sendOptions">
			<label class="radio-inline"><input type="radio" name="sendOption" value="render" checked>By Render</label>
			<label class="radio-inline"><input type="radio" name="sendOption" value="redirect">By Redirect</label>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-4">
			<button type="submit" class="btn btn-primary" id="submitFlash">Set Flash Message</button>
		</div>
	</div>

</form>

